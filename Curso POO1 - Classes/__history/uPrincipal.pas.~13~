unit uPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, uClasses, Vcl.StdCtrls;

type
  TfrmPrincipal = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Label4: TLabel;
    edtAddCodigo: TEdit;
    Label5: TLabel;
    edtAddNome: TEdit;
    Label6: TLabel;
    edtAddQuantidade: TEdit;
    Edit7: TEdit;
    Button2: TButton;
    Edit8: TEdit;
    Label7: TLabel;
    Label8: TLabel;
    Edit9: TEdit;
    Label9: TLabel;
    btnCadastrar: TButton;
    Label3: TLabel;
    edtAddValor: TEdit;
    btnAdicionar: TButton;
    procedure btnCadastrarClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure btnAdicionarClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPrincipal: TfrmPrincipal;

implementation

{$R *.dfm}

var
  Pedido : TPedido;

procedure TfrmPrincipal.btnAdicionarClick(Sender: TObject);
var
  produto : TProduto;
  item : TItem;
begin
   produto := TProduto.Create;
   produto.Codigo := StrToInt(edtAddCodigo.Text);
   produto.Nome := edtAddNome;

   item := TItem.Create;

   item.Produto := produto;

   item.Quantidade := StrToInt(edtAddQuantidade.Text);
   item.Valor := StrToFloat(edtAddValor.Text);

   pedido.Add(item);
end;

procedure TfrmPrincipal.btnCadastrarClick(Sender: TObject);
var
   obj : TProduto;
begin
  obj := TProduto.Create;
  Edit1.Text := IntToStr(obj.Codigo);
  Edit2.Text := obj.Nome;

end;

procedure TfrmPrincipal.FormCreate(Sender: TObject);
begin
 Pedido := TPedido.Create;
end;

end.
